<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/imageViewAds"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imageViewAds"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewAdsSmallImage"/>
    <TextView
        android:id="@+id/textViewAdsDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewAdsSmallImage"
        android:layout_alignBottom="@id/imageViewAds"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:text="noi dung quang cao ca khuc moi cua maroon 5 hihihii"
        android:textSize="13sp"
        android:maxLines="1"
        android:textColor="@color/smallText"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewAdsSmallImage"
        android:layout_above="@id/textViewAdsDescription"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/textViewAdsSongName"
        android:textColor="@color/bigText"
        android:text="Ten bai hat"/>

</RelativeLayout>